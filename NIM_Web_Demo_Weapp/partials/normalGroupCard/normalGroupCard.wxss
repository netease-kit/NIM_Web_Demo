.card-wrapper {
  width: 100%;
  padding-top: 40rpx;
}
/*头部  */
.card-header {
  box-sizing: border-box;
  padding: 0 8rpx;
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.card-header-item {
  position: relative;
  overflow: hidden;
  width: 144rpx;
  height: 188rpx;
  text-align: center;
}
.card-header-item-del {
  position: absolute;
  top: 0;
  right: 5rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 40rpx;
  background: #F04D64;
  border: 2rpx solid #F3F4F6;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  font-weight: bold;
}
.card-header-icon,
.card-header-add,
.card-header-del {
  width: 102rpx;
  height: 102rpx;
  border-radius: 100%;
}
.card-header-nick {
  overflow: hidden;
  display: block;
  margin-top: 20rpx;
  height: 24rpx;
  line-height: 24rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #333;
  align-self: flex-start;
  font-size:24rpx;
}
/*中间内容  */
.card-content {
  width: 100%;
}
/* 好友关系分隔 */
.card-content-item {
  width: 100%;
  height: 96rpx;
  line-height: 96rpx;
  font-size: 32rpx;
  background: #fff;
}
.card-content-item + .card-content-item {
  margin-top: 20rpx;
}
.card-content-item-left {
  margin-left: 32rpx;
  color: #222;
}
.card-content-item-right {
  float: right;
  color: #959595;
  margin-right: 20rpx;
  font-size: 30rpx;
}
.card-content-item-right.value {
  overflow: hidden;
  display: inline-block;
  max-width: 450rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
}
switch.card-content-item-right {
  margin-top: 16rpx;
  line-height: 0;
}
/*底部按钮  */
.card-content-btn {
  margin-top: 60rpx;
  width: 100%;
}
.card-content-btn button {
  width: 90%;
  margin-left: 5%;
  margin-bottom: 30rpx;
  color: #fff;
}
